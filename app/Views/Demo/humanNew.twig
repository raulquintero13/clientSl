{% block title %}{{title is defined ? title : 'not defined'}}
{% endblock %}

{% block head %}{% endblock %}

{% block container %}
<div class="container text-left ">
    {% if messages is defined %}
        {% for message in messages %}
            <div class="alert  alert-success ">
                {{message}}

            </div>
        {% endfor %}
    {% endif %}

    <h1>{% block title_page %}{% endblock %}</h1>
    <br><br>


    <div class="box-content">
        <form action="#" method="POST" class='form-horizontal'>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">Curp</label>
                <div class="col-sm-10">
                    <input type="text" name="textfield" id="textfield" class="form-control">
                    <span class="help-block">This is just a supporting text</span>
                </div>
            </div>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="textfield" id="textfield" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">Middle Name</label>
                <div class="col-sm-10">
                    <input type="text" name="textfield" id="textfield" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">Last Name</label>
                <div class="col-sm-10">
                    <input type="text" name="textfield" id="textfield" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">email</label>
                <div class="col-sm-10">
                    <input type="text" name="human[email]" id="email" class="form-control">
                </div>
            </div>
           {% block typeHuman %}

           {% endblock %}

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn">Cancel</button>
            </div>
        </form>
    </div>




</div>

{% endblock %}

{% block scripts %}{% endblock %}