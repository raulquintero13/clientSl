                {{message}}

            </div>
        {% endfor %}
    {% endif %} #}

    <h1>{% block title_page %}{% endblock %}</h1>
    <br><br>


    <div class="box-content">
        <form action="{{ action }}" method="POST" class='form-horizontal'>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">Curp</label>
                <div class="col-sm-10">
                    <input type="text" name="human[curp]" id="curp" class="form-control">
                    {% if messages.form_employee_new_curp is defined  %}
                        {% for message in messages.form_employee_new_curp %}
                       <div class="error-help-block">{{ message|ucwords }}</div>
                       {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">Name</label>
                <div class="col-sm-10">
                    <input type="text" name="human[first_name]" id="name" class="form-control">
                    {% if messages.form_employee_new_first_name is defined  %}
                        {% for message in messages.form_employee_new_first_name %}
                       <div class="error-help-block">{{ message|ucwords }}</div>
                       {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">Middle Name</label>
                <div class="col-sm-10">
                    <input type="text" name="human[middle_name]" id="middle_name" class="form-control">
                    {% if messages.form_employee_new_middle_name is defined  %}
                        {% for message in messages.form_employee_new_middle_name %}
                       <div class="error-help-block">{{ message|ucwords }}</div>
                       {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">Last Name</label>
                <div class="col-sm-10">
                    <input type="text" name="human[last_name]" id="last_name" class="form-control">
                    {% if messages.form_employee_new_last_name is defined  %}
                        {% for message in messages.form_employee_new_last_name %}
                       <div class="error-help-block">{{ message|ucwords }}</div>
                       {% endfor %}
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label for="textfield" class="control-label col-sm-2">email</label>
                <div class="col-sm-10">
                    <input type="text" name="human[email]" id="email" class="form-control">
                    {% if messages.form_employee_new_email is defined  %}
                        {% for message in messages.form_employee_new_email %}
                       <div class="error-help-block">{{ message|ucwords }}</div>
                       {% endfor %}
                    {% endif %}
                </div>
            </div>
           {% block typeHuman %}

           {% endblock %}

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn">Cancel</button>
            </div>
        </form>
    </div>




</div>

{% endblock %}

